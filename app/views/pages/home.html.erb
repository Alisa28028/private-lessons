<div class="row">
  <div class="column">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "alisa.png" %>);">
      <div class="container">
        <h1 class="">Dance! <strong>Prance!</strong></h1>
        <p>We are dance people for your enjoyment</p>
        <p class="mb-2 fw-bold">Check out these FUCKING COOL classes</p>
      </div>
    </div>
    <div class="btn btn-custom d-flex justify-content-center mb-2">Sign up
    </div>
    <div class="d-flex justify-content-center"><%= link_to "Log in", new_user_session_path %> </div>
    <div class="mt-4">Check out some upcoming events!</div>
    <%# iterating through some events %>
    <% @events.each do |event| %>
      <div class="card-product mt-3">
        <%= image_tag "farley.jpg" %>
        <div class="card-product-infos">
          <h2><%= event.title %></h2>
          <p><%= event.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
