            </button>
          <% else %>
            <button type="button" class="btn btn-card ml-2 mr-0"
                      data-bs-toggle="modal"
                      data-bs-target="#bookingModal<%= instance.id %>"
                      data-controller="modal"
                      data-action="click->modal#handleClick">
              Book Class!
            </button>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <%# <% end %>
    <%# </div> %>
  <% end %>
