              <% end %>
            <% end %>
          <% end %>
          <%# <turbo-frame id="like_<%= instance.id %>
        </div>
        <h4 style="margin-bottom: 16px; font-weight: 500;"><%= instance.event.user.name.capitalize %> </h4>
