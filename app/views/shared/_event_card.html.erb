<%# used in home page %>
<!-- card only appears if the user is not the event creator -->
<% unless event.user == current_user && controller_name == 'users' %>
  <div class="card-product m-1 mb-3">
    <%= link_to "", event_path(event), class: "card-link z-down" %>
    <div class="d-flex flex-column justify-content-between">
      <div class="d-flex flex-row justify-content-between p-2">
        <!-- EVENT TITLE -->
        <div class="d-flex flex-column">
          <h2><%= event.title.upcase %></h2>
        </div>
        <!-- EVENT LOCATION -->
        <div class="d-flex flex-column text-end">
          <p class="text-custom d-flex justify-content-end"><strong><%= event.location.address %></strong></p>
        </div>
      </div>
      <div class="card-product-info-grid mb-2">
        <!-- EVENT PHOTO -->
        <div>
          <% if event.photos.attached? %>
            <%= cl_image_tag event.photos.first.key %>
          <% else %>
            <% if event.user.photo.attached? %>
              <%= cl_image_tag(event.user.photo.key, class: "pl-avatar") %>
            <% end %>
          <% end %>
        </div>
        <div class="card-product-infos">
          <!-- EVENT DATE AND TIME -->
          <div class="d-flex flex-column">
            <p><%= event.start_date.strftime("%B %d, %Y") %></p>
            <p><%= event.start_date.strftime("%H:%M") %>~<%= event.end_date.strftime("%H:%M") %></p>
          </div>
          <!-- EVENT IS FULL CONDITIONAL -->
          <% if event.capacity - event.bookings.count <= 0 %>
            <p class="attendee-number text-end text-danger mb-2"><strong>EVENT FULL!</strong></p>
          <% else %>
            <!-- REMAINING SPOTS -->
            <% remaining_spots = event.capacity - event.bookings.count %>
            <% if remaining_spots <= 10 %>
              <p class="attendee-number text-end text-danger mb-2"> <%= event.capacity - event.bookings.count %> Spots left</p>
            <% end %>
          <% end %>
          <!-- Conditional Buttons inside the card -->
          <!---------------------------------------------->
          <% if event %>
            <div class="d-flex justify-content-end align-items-center" style="position: relative; display: inline-flex;">
              <%# <% if @event.user != current_user %> <!-- Only show button if current_user is not the event creator -->
              <!-- ATTENDING  -->
              <!-- Checking if current user is already attending the event -->
              <% if event.bookings.map {|b| b.user_id }.include?(current_user.id) %>
                <p style="font-size: small color; border: 1px solid #000; padding: 8px; display: inline-block; border-radius: 4px;">
                  Attending!
                </p>
                <!-- JOIN WAIT LIST  -->
                <!-- if not attending, check if the event is full. If yes, JOIN WAIT LIST -->
              <% elsif event.capacity - event.bookings.count <= 0 %>
                <div class="d-flex justify-content-end align-items-center" style=" position: absolute; display: inline-flex;">
                  <button type="button" style="font-size: small; z-index: 10;" class="btn btn-custom ml-2 mb-0 mr-0 " data-bs-toggle="modal" data-bs-target="#waitinglistModal<%= event.id %> ">
                    Join Wait List
                  </button>
                </div>
                <!-- BOOK THIS CLASS  -->
                <!-- If not attending and not full "BOOK THIS CLASS" -->
              <% else %>
                <div class="d-flex justify-content-end align-items-center" style=" position: absolute; display: inline-flex;">
                  <button type="button" style="font-size: small; z-index: 10;" class="btn btn-custom ml-2 mb-0 mr-0" data-bs-toggle="modal" data-bs-target="#bookingModal<%= event.id %> ">
                    Book this Class!!
                  </button>
                </div>
              <% end %>
              <!-- End of check for event creator -->
            </div>
          <% end %>
        </div>
        <!-- END of Conditional Buttons inside the card -->
        <!---------------------------------------------->
        <!-- Booking Modal for the Event -->
        <div class="modal fade" id="bookingModal<%= event.id %>" tabindex="-1" aria-labelledby="bookingModalLabel<%= event.id %>" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel<%= event.id %>">Book "<%= event.title %>" Class on <%= event.start_date.strftime("%Y/%m/%d (%a)") %> at <%= event.start_date.strftime("%H:%M") %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to book this class?</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Book Now</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!---------------------------------------------->
<% else %>
  <!-- EVENT CREATOR LAYOUT (DASHBOARD CARD) -->
  <!---------------------------------------------->
  <div class="card-product m-1 mb-3 p-2">
    <div class="d-flex flex-column justify-content-between h-100">
      <div class="d-flex justify-content-between">
        <!-- EVENT TITLE -->
        <h5 class="fs-5 fw-bold"><%= event.title.upcase %></h5>
        <div class="d-flex gap-2">
          <i class="fa-solid fa-person fa-sm mt-2"></i>
          <% if event.capacity - event.bookings.count <= 0 %>
            <p class="attendee-number text-dark fs-6"><strong><%= event.capacity %>/<%= event.capacity %></strong></p>
          <% else %>
            <p class="attendee-number text-dark fs-6"><%= event.capacity - event.bookings.count %>/<%= event.capacity %></p>
          <% end %>
        </div>
      </div>
      <div class="card-product-info-grid mb-2">
        <div>
          <% if event.photos.attached? %>
            <%= cl_image_tag event.photos.first.key %>
          <% else %>
            <% if event.user.photo.attached? %>
              <%= cl_image_tag(event.user.photo.key, class: "pl-avatar") %>
            <% end %>
          <% end %>
        </div>
        <div class="d-flex justify-content-between ms-3">
          <div>
            <p class="justify-content-end date-text"><%= event.start_date.strftime("%Y/%m/%d (%a)") %></p>
            <div class="d-flex align-items-center gap-1">
              <p class="justify-content-end date-text text-custom"><%= event.start_date.strftime("%H:%M") %></p>
              <span class="text-custom">~</span>
              <p class="justify-content-end date-text text-custom"><%= event.end_date.strftime("%H:%M") %></p>
            </div>
            <p class="d-flex text-dark" style="font-size:14px"><%= event.location.address %></p>
          </div>
          <div class="d-flex flex-col align-items-end">
            <!-- ICON TO EDIT EVENT -->
            <div>
              <%= link_to edit_event_path(event), class: "py-0 px-1 z-up" do %>
                <i class="fa-regular fa-pen-to-square"></i>
              <% end %>
            </div>
            <!-- ICON TO DUPLICATE EVENT -->
            <div>
              <%= link_to duplicate_event_path(event), class: "py-0 px-1 z-up" do %>
                <i class="fa-regular fa-copy"></i>
              <% end %>
            </div>
          </div>
        </div>
        <!---------------------------------------------->
        <!-- Link to show page (this links to the specific event) -->
      </div>
    </div>
  </div>
<% end %>
