<div class="d-flex justify-content-center mt-6 mb-4">
  <h2>Forgot your password?</h2>
</div>
<div class="col-12 col-md-6 col-lg-6 mx-auto px-4">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Request reset link", class: "btn btn-card" %>
    </div>
    <div style="margin-bottom: 26px; margin-top: 10px; font-family: 'Inter'; text-decoration: underline; text-decoration-thickness: 1px; text-decoration-color: #969598;">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
