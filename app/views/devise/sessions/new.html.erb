<div class="container-home">
  <div class="overlay-text">
    <div style="margin-bottom: 15px;">
      <h1 class="home" style="margin-top: -82px">Welcome,
      </h1>
      <h3 class="home">Create an account to start booking classes!</h3>
      <div class="d-flex flex-column">
        <%= link_to "Create an Account", new_user_registration_path, class: "btn btn-home" %>
        <div class="d-flex align-items-center" style="margin-bottom: 32px;">
          <%= link_to new_user_session_path(return_to: request.fullpath) do  %>
            <h4 style="margin-left: 22px; margin-top: 3px; color: white; text-decoration: underline; text-decoration-thickness: 1px, font-weight: 300; font-size: 14px;">
              or click here to log in.
            </h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex flex-column" style="position: relative;">
  <h3 class="mt-5 mb-2">Log in</h3>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <%= render "devise/shared/links" %>
    <div class="form-actions" style="margin-top: 20px;">
      <%= f.button :submit, "Log in", class: "btn-right" %>
    </div>
  </div>
<% end %>
