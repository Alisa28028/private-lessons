<div class="container-home">
  <div class="overlay-text">
    <div style="margin-bottom: 15px;">
      <h1 class="home" style="margin-top: -82px">Sign in
      </h1>
      <%= link_to new_user_registration_path(return_to: request.fullpath) do  %>
        <h3 class="home" style="margin-top: 3px; color: white; text-decoration: underline; text-decoration-thickness: 1px, font-weight: 300; font-size: 14px;">
          Or create an account!</h3>
      <% end %>
    </div>
  </div>
</div>
<div class="d-flex flex-column" style="position: relative; margin-top: -128px;">
  <div class="d-flex mx-4" style="background-color: white; border-radius: 10px;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="width: 120%; margin-left: 27px; margin-top: 33px; font-family: 'Inter';">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }
                %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <div class="form-check mb-2">
          <%= f.check_box :remember_me, { class: "form-check-input-remember", id: "remember_me" } %>
          <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "remember_me" %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
      <div class="form-actions" style="margin-top: 20px;">
        <%= f.button :submit, "Log in", class: "btn-right" %>
      <% end %>
    </div>
  </div>
</div>
