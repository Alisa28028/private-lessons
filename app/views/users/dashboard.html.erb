<div class="container px-2 bg-white">
  <div class="row">
    <div class="col-12">
      <div class="column mx-3">
        <% if current_user.events.any? || current_user.bookings.any? %>
          <div class="d-flex justify-content-between mt-4 mb-2">
            <p class="d-flex justify-content-center fs-3 text-dark"><strong>My Dashboard</strong></p>
            <p class="text-white bg-custom button-plus d-flex justify-content-center align-items-center"><strong>
                <%= link_to "+", new_event_path, class: "text-white text-decoration-none" %></strong>
            </p>
          </div>
          <h4 class="d-flex justify-content-left mb-4 pb-2 fs-5 text-dark border-bottom border-1">Last Month:</h4>
          <div class="d-flex justify-content-between mb-4 pb-3">
            <div class="col-4 d-flex flex-column align-items-center">
              <p class="lh-1 text-dark text-center">Total Bookings</p>
              <%# <div class="flex-grow-1 d-flex align-items-center justify-content-center border-end border-1 w-100" >
                <h2 class="m-0 text-dark "><b><%= @last_month_bookings %>
              <%# </b></h2> %>
            </div>
            <div class="col-4 d-flex flex-column align-items-center">
              <p class=" text-dark text-center">Earnings</p>
              <%# <h5 class="m-0 text-dark"><b><%= humanized_money_with_symbol @last_month_events_sum %>
            </div>
            <%# <div class="flex-grow-1 d-flex align-items-center justify-content-center border-end border-1 w-100" > %>
            <%# </b></h5> %>
            <%# </div>
            </div> %>
            <div class="col-4 d-flex flex-column align-items-center ps-2">
            </div>
            <%#---- Tallying up students who attended the most ----%>
            <%# removing block AA %>
            <%#---- END of Tallying up students who attended the most ----%>
          </div>
        </div>
      </div>
      <!-- SINGLE Manage Attendees Button -->
      <button class="btn btn-outline-primary mb-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#attendeePanel" aria-controls="attendeePanel">
        Manage All Attendees
      </button>
      <!-- Offcanvas Panel for All Bookings -->
      <div class="offcanvas offcanvas-end" tabindex="-1" id="attendeePanel" aria-labelledby="attendeePanelLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="attendeePanelLabel">Attendee Management</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <% @event_instances.each do |instance| %>
            <h6 class="" style="margin-bottom: -1px;"><%= instance.event.title.capitalize %> - <%= instance.start_time.strftime("%Y/%m/%d") %></h6>
            <% instance.bookings.each do |booking| %>
              <turbo-frame id="booking_<%= booking.id %>">
                <!-- Turbo frame with buttons and state here -->
                <div class="" style="margin-top: -6px;">
                  <strong><%= booking.user.name %></strong> - <%= booking.state %>
                </div>
                <% if booking.state == 'unpaid' %>
                  <%= button_to update_state_booking_path(booking, state: 'paid'), method: :patch, remote: true, data: { turbo_frame: "booking_#{booking.id}" }, class: "btn btn-sm btn-success" do %>
                    Mark as Paid
                  <% end %>
                <% else %>
                  <%= button_to update_state_booking_path(booking, state: 'unpaid'), method: :patch, remote: true, data: { turbo_frame: "booking_#{booking.id}" }, class: "btn btn-sm", style: "background-color: black; color: white;" do %>
                    Mark as Unpaid
                  <% end %>
                <% end %>
              <% end %>
            </turbo-frame>
          <% end %>
        </div>
      </div>
      <%# Iterating through teaching events %>
      <div class="container p-0">
      </div>
      <div class="container">
        <div class="row mx-4">
          <h6 class="border-bottom border-1 d-flex justify-content-center mb-3">Upcoming classes</h6>
          <div class="col-12 col-md-6 col-lg-6 mx-auto px-3">
            <div class="card-container mx-auto">
              <%= render "shared/event_card_iteration", event_instances: @upcoming_event_instances %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <h2 class="mb-0 mt-5 d-flex align-items-center fw-bold">You haven't created any events or registered to any classes yet.</h2>
      <a href="new_event_path">
        <p class="text-white bg-custom button-plus d-flex justify-content-center align-items-center my-2"><strong><%= link_to "+", new_event_path, class: "text-white text-decoration-none" %></strong>
        </p>
      </a>
    <% end %>
  </div>
