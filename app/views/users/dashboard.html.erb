<div class="container w-100">
  <div class="row">
    <div class="column">
      <div class="d-flex justify-content-between">
        <p class="mb-0 mt-2 d-flex align-items-center fw-bold">Teaching</p>
        <div class="">
          <a href="new_event_path">
            <p class="text-white bg-custom button-plus d-flex justify-content-center align-items-center my-2"><strong>+</strong></p>
          </a>
        </div>
      </div>
      <%# going to have to iterate after re-seeding %>
      <div class="card-product">
        <%= image_tag "farley.jpg" %>
        <div class="card-product-infos">
          <h2>Prancing 101</h2>
          <p>Learn the proper way to <strong>prance</strong> practically.</p>
        </div>
      </div>
      <p class="mb-2 mt-4 d-flex align-items-center fw-bold">Attending</p>
      <%# Iterating through attending events %>
      <% @events.each do |event| %>
        <div class="card-product">
          <%= image_tag "farley.jpg" %>
          <div class="card-product-infos">
            <h2><%= event.title %></h2>
            <p><%= event.description %></p>
            <p class="opacity-25 attendee-number">Attendees: <%= event.bookings.count %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
