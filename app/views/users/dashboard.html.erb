<div class="container my-5 w-100">
  <div class="row">
    <div class="col-12">
      <div class="column mx-3">
        <% if current_user.is_teacher %>
          <div class="d-flex justify-content-between mt-4 mb-2">
            <p class="d-flex justify-content-center fs-3 text-dark"><strong>My Dashboard</strong></p>
            <div class="">
              <a href="new_event_path">
                <p class="text-white bg-custom button-plus d-flex justify-content-center align-items-center"><strong><%= link_to "+", new_event_path, class: "text-white text-decoration-none" %></strong></p>
              </a>
            </div>
          </div>
          <h4 class="d-flex justify-content-left mb-4 pb-2 fs-5 text-dark border-bottom border-1">Last Month:</h4>
          <div class="d-flex justify-content-between mb-4 pb-3">
            <div class="col-4 d-flex flex-column justify-content-between align-items-center">
              <p class="lh-1 text-dark text-center">Total Bookings</p>
              <div class="flex-grow-1 d-flex align-items-center justify-content-center border-end border-1 w-100" >
                <h2 class="m-0 text-dark "><b><%= @last_month_bookings %></b></h2>
              </div>
            </div>
            <div class="col-4 d-flex flex-column justify-content-between align-items-center">
              <p class=" text-dark text-center">Earnings</p>
              <div class="flex-grow-1 d-flex align-items-center justify-content-center border-end border-1 w-100" >
                <h5 class="m-0 text-dark"><b><%= humanized_money_with_symbol @last_month_events_sum %></b></h5>
              </div>
            </div>
            <div class="col-4 d-flex flex-column justify-content-between align-items-center ps-2 style="height: 100px;>
              <%#---- Tallying up students who attended the most ----%>
              <% users_data = [] %>
              <% @events.each do |event| %>
                <% event.bookings.each do |booking| %>
                  <% users_data << { name: booking.user.name.split.first, photo: booking.user.photo.key } %>
                <% end %>
              <% end %>
              <% tally_with_photos = users_data.tally %>
              <% sorted_result = tally_with_photos.sort_by { |_user, count| -count } %> <!-- Sort by count descending -->
              <div style="text-align: center;">
                <p class="lh-1 text-dark">Top Students</p>
              </div>
              <div class="mb-2">
                <% sorted_result.take(3).each do |(user, count)| %>
                  <div class="user-entry d-flex align-items-center">
                    <% if user[:photo].present? %>
                      <%= cl_image_tag user[:photo], class: "avatar-bordered", style: "width: 25px; height: 25px", alt: user[:name] %>
                    <% else %>
                      <%= image_tag 'default-avatar.png', class: "avatar-bordered", style: "width: 25px; height: 25px", alt: user[:name] %>
                    <% end %>
                    <h6 class="text-dark m-0"><b> <span><%= user[:name] %></h6>
                      </div>
                    <% end %>
                  </div>
                  <%#---- END of Tallying up students who attended the most ----%>
                </div>
              </div>
              <%# Iterating through teaching events %>
              <div class="container p-0" style="margin-left: 2px;">
                <h6 class="border-bottom border-1">Upcoming classes</h6>
              </div>
              <div class="mt-3">
                <%= render "shared/event_card_iteration", events: @events %>
                <%# <%= render "shared/event_card_iteration", events: @events.select { |event| event.start_date || event.event_instances.first&.start_time >= Time.now } %>
              </div>
              <div class="container p-0" style="margin-left: 2px;">
                <h6 class="border-bottom border-1 mt-5">Past classes</h6>
                <div class="mt-3">
                  <%= render "shared/event_card_iteration", events: @events %>
                  <%# <%= render "shared/event_card_iteration", events: @events.select { |event| event.start_date || event.event_instances.first&.start_time < Time.now } %>
                </div>
              </div>
              <%#---- financial dashboard starts here ----%>
              <p class="mb-0 mt-2 d-flex align-items-center fw-bold text-center">Earnings</p>
              <br>
              <div class="card-sums">
                <div class="d-flex flex-column">
                  <div class="d-flex flex-row justify-content-evenly">
                    <%# monthly earnings total: bookings this month sum %>
                    <div class="d-flex flex-column align-items-center">
                      <p class="justify-content-en">This month: <%= humanized_money_with_symbol @current_month_events_sum %>
                        <p>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                          <p class="justify-content-en">Last month: <%= humanized_money_with_symbol @last_month_events_sum %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <%# optional: last 3 monthly bookings: sort bookings by date, iterate 3 times to display booking data %>
                  <%# optional: top earning classes: retrieve max key values %>
                </div>
                <%#---- financial dashboard end here ----%>
              <% else %>
                <h2 class="mb-0 mt-5 d-flex align-items-center fw-bold">You haven't created any events yet.</h2>
                <div class="">
                  <a href="new_event_path">
                    <p class="text-white bg-custom button-plus d-flex justify-content-center align-items-center my-2"><strong><%= link_to "+", new_event_path, class: "text-white text-decoration-none" %></strong></p>
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
