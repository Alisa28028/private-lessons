<div class="d-flex justify-content-center mt-6 mb-4">
  <h2>Edit profile</h2>
</div>
<div class="col-12 col-md-6 col-lg-6 mx-auto px-4">
  <br>
  <% @user = current_user %>
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %>
    <%= f.input :description %>
    <%# <%= f.simple_fields_for :weekly_availabilities do |wa| %>
      <%# <%= render "weekly_availabilities/fields", f: wa %>
      <%# <% end %>
      <%= f.input :instagram, placeholder: "Enter link to profile" %>
      <%= f.input :x %>
      <%= f.input :tiktok %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Update profile", class: "btn btn-card" %>
    <% end %>
    <%= link_to "Back", :back, class: "btn btn-manage" %>
  </div>
