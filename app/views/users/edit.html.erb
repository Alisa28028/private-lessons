<div class="container w-100 my-5 bg-white">
  <br>
  <% @user = current_user %>
  <%= simple_form_for @user do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Update your profile", class: "btn btn-custom my-3" %>
  <% end %>
</div>
