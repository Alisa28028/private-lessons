<div class="container w-100 min-vh-100">
  <div class="row">
    <div class="column">
      <%= image_tag(@user.photo, width: "200px") %>
    <h2><%= @user.name %></h2>
    <p><%= @user.description %><p>
    </div>
  </div>
  <% if @user == current_user %>
  <%= link_to "Edit profile", edit_user_path(current_user), class: "btn btn-gradient" %>
  <% end %>
</div>
