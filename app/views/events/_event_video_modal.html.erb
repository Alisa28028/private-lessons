<!-- Modal for Adding Video -->
<div class="modal fade" id="addVideoModal" tabindex="-1" aria-labelledby="addVideoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title" id="addVideoModalLabel">Add a Video</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal Body (Video Upload or URL Input) -->
      <div class="modal-body">
        <%= simple_form_for @event, url: add_video_event_path(@event), method: :post do |f| %>
          <%= f.input :videos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Upload video", class: "btn btn-custom my-3 btn-right" %>
        <% end %>
      </div>
      <!-- Modal Footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
