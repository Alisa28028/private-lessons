<div class="container col-12" style="margin-bottom: 5px;">
  <h2 class="d-flex justify-content-center mb-3 mt-6">Search classes</h2>
  <div class="container w-100 mt-4 my-5">
    <div class="row">
      <%= simple_form_for :search_by_title_and_description_and_user, url: search_path, method: :get do |f| %>
        <div class="search-form-control form-group mb-5">
          <input class="form-control string required"
          type="text"
          name="query"
          id="search_query" />
          <button type="submit" class="btn btn-search">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
      <div class="col-12 col-md-6 col-lg-6 mx-auto px-2">
        <div class="card-container mx-auto">
          <% if params[:query].present? %>
            <% if @event_instances.any? %>
              <%= render '/shared/event_card_iteration', events: @events, event_instances: @event_instances %>
            <% else %>
              <h4>No results found.</h4>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
