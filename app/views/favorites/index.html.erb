<div class="d-flex justify-content-center mt-7 mb-4">
  <h2><%= t("favorites.title") %></h2>
</div>
<% if @favorites.any? %>
  <div class="row gx-2 gy-4">
    <% @favorites.each do |event_instance| %>
      <div class="col-12 col-md-6 col-lg-6 mx-auto px-4">
        <%= render partial: "shared/event_instances_card", locals: { instance: event_instance } %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="d-flex justify-content-center mb-4">
    <h4> <%= t("favorites.no_fav") %></h4>
  </div>
<% end %>
