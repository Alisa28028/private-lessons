<div class="mt-6">
  <%= form_with(model: @post, url: event_posts_path(@event), local: true) do |form| %>
    <% if @event %>
      <!-- Pre-fill form with event details if @event is present -->
      <div class="form-group">
        <%= form.label :title, "Title (Event: #{@event.title})" %>
        <%= form.text_field :title, value: @event.title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :content, "Content (Event Description: #{@event.description})" %>
        <%= form.text_area :content, value: @event.description, class: "form-control" %>
      </div>
    <% else %>
      <!-- Blank form for creating a new post from scratch -->
      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :content, "Content" %>
        <%= form.text_area :content, class: "form-control" %>
      </div>
    <% end %>
    <!-- Common form fields -->
    <div class="form-group">
      <%= form.label :video, "Attach Video" %>
      <%= form.file_field :video, class: "form-control" %>
    </div>
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  <% end %>
</div>
